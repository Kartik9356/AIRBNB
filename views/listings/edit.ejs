<body>
  <h2>Edit Details</h2>
  <form action="/listing/<%= data._id %>/edit?_method=PATCH" method="post" enctype="multipart/form-data">
    <div class="input">
      <label for="title">Title<sup>*</sup></label>
      <input
      value="<%= data.title  %>"
        required
        id="title"
        name="listings[title]"
        placeholder="Title"
        type="text"
      />
    </div>
    <div class="input">
      <label for="desc">Description <sup>*</sup></label>
      <textarea
        required
        rows="5"
        id="desc"
        name="listings[description]"
        placeholder="Description"
      ><%= data.description  %></textarea>
    </div>
     <div class="input">
      <p>Old image</p>
     <img src="<%= data.image.url%>" height="150px" style="border-radius: 10px; border: 3px double black;" alt="">
     </div>
    <div class="input">
      <label for="image">New Image (Choose if you want to cahnge)</label>
      <input id="image" name="listings[image]" placeholder="Image" type="file" />
    </div>

    <label>Choose your listings category</label>
    <div class="input categoryInput">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="mountain" name="listings[category][]" value="mountain">
        <label class="form-check-label" for="mountain">Mountain</label>
      </div>
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="swimmingPool" name="listings[category][]" value="swimmingPool">
        <label class="form-check-label" for="swimmingPool">Swimming Pool</label>
      </div>
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="tinyHomes" name="listings[category][]" value="tinyHomes">
        <label class="form-check-label" for="tinyHomes">Tiny Homes</label>
      </div>
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="farms" name="listings[category][]" value="farms">
        <label class="form-check-label" for="farms">Farms</label>
      </div>
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="city" name="listings[category][]" value="city">
        <label class="form-check-label" for="city">City</label>
      </div>
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="beachfront" name="listings[category][]" value="beachfront">
        <label class="form-check-label" for="beachfront">Beachfront</label>
      </div>
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="luxe" name="listings[category][]" value="luxe">
        <label class="form-check-label" for="luxe">Luxe</label>
      </div>
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="rooms" name="listings[category][]" value="rooms">
        <label class="form-check-label" for="rooms">Rooms</label>
      </div>
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="mansion" name="listings[category][]" value="mansion">
        <label class="form-check-label" for="mansion">Mansion</label>
      </div>
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="island" name="listings[category][]" value="island">
        <label class="form-check-label" for="island">Island</label>
      </div>
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="play" name="listings[category][]" value="play">
        <label class="form-check-label" for="play">Play</label>
      </div>
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="arctic" name="listings[category][]" value="arctic">
        <label class="form-check-label" for="arctic">Arctic</label>
      </div>
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="camperVans" name="listings[category][]" value="camperVans">
        <label class="form-check-label" for="camperVans">Camper Vans</label>
      </div>
    </div>

   <div class="group">
    <div class="input">
      <label for="price">Price<sup>*</sup></label>
      <input
      value="<%= data.price  %>"
      required
        id="price"
        name="listings[price]"
        placeholder="0000"
        type="number"
      />
    </div>
    <div class="input">
      <label for="country">Country<sup>*</sup></label>
      <input
      value="<%= data.country  %>"
      required
        id="country"
        name="listings[country]"
        placeholder="ex, India"
        type="text"
      />
    </div>
   </div>
    <div class="input">
      <label for="location">location<sup>*</sup></label>
      <input
      value="<%= data.location  %>"
      required
        id="location"
        name="listings[location]"
        placeholder="location"
        type="text"
      />
    </div>
    <button class="submit" type="submit">Save</button>
  </form>
  <script src="/script/navHider.js"></script>
</body>
