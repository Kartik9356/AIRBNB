
<script>

document.addEventListener("DOMContentLoaded",()=>{

  
  let category= <%- JSON.stringify(data.category) %>
  
  const options = document.querySelectorAll(".form-check-input");
  options.forEach(op => {
    category.forEach(ct => {
      if(ct == op.id){
        console.log("found")
        op.setAttribute("checked",true)
      }
    });
  });
})
</script>

<% layout('./layouts/boylerplate') -%>

