<%- layout('./layouts/boylerplate') -%>

<style>
  a {
    color: black;
    text-decoration: none;
  }
  .card-img {
    border-radius: 15px;
    width: 100%;
    height: 270px;
    object-fit: cover;
    /* overflow: hidden; */
  }
  .cards {
    margin: 20px auto;
    width: 90vw;
    display: grid;
    /* grid-template-columns:25% 25% 25% 25%; */
    grid-template-columns: repeat(4, 24%);
    column-gap: 15px;
    row-gap: 15px;
  }
  .card-link {
    transition: all 0.2s ease-in-out;
    padding: 2px;
    height: 350px;
    border-radius: 15px;
  }
  .card-body {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: space-around;
    height: 60px;
  }
  .card-body {
    margin: 5px 10px;
  }
  .card-link:hover {
    cursor: pointer;
    background-color: #00000009;
    transform: scale(1.02);
    box-shadow: 0px 0px 20px rgb(116, 116, 116);
  }

  @media screen and (max-width: 450px) {
    .cards {
    width: 96vw;
    grid-template-columns: repeat(1, 95%);
    column-gap: 15px;
    row-gap: 15px;
  }
  }
</style>

<body>
  <div class="cards">
    <% for (const list of data) { %>
    <a class="card-link" href="/show/<%= list._id %>">
      <div class="card">
        <img class="card-img" src="<%= list.image  %>" alt="Card image cap" />
        <div class="card-body">
          <p class="card-text"><b><%= list.title %> </b><br /></p>
          <p>
            <b> &#8377;<%= Number(list.price).toLocaleString("en-IN") %> </b
            >/night
          </p>
        </div>
      </div>
    </a>
    <% } %>
    <br />
  </div>
</body>
